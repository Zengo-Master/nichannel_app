<h1>⭐️２ちゃんねる掲示板⭐️</h1>
<%= form_with url:  "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :name, id: "name", placeholder: '名前', size: 15 %><br><br>
  <%= form.text_area :message, id: "message", placeholder: '投稿内容（誹謗中傷は禁止！）', size: "48x5" %><br>
  <%= form.submit 'OK' , id: "submit" %>
<% end %>

<div id="list">
</div>

<% @posts.each do |post|%>
  <div class="post" data-id = <%= post.id %> data-check=<%= post.checked %>>
    <span class="post-id">
      <%= post.id%>
    </span>
    <span class="post-name">
      <%= post.name%>
    </span>
    <span class="post-date">
      <%= l post.created_at%>
    </span>
    <div class="post-message">
      <%= post.message%>
    </div>
  </div>
<% end %>
